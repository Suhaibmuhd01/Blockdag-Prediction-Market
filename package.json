{
  "name": "prediction-market-dapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A decentralized prediction market application built with Hardhat.",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "compile": "cd contracts && npx hardhat compile",
    "test": "cd contracts && npx hardhat test",
    "deploy:local": "cd contracts && npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "cd contracts && npx hardhat run scripts/deploy.js --network sepolia",
    "node": "cd contracts && npx hardhat node",
    "demo": "npm run node & sleep 5 && npm run deploy:local && npm run dev"
  },
   "keywords": [
    "hardhat",
    "ethereum",
    "solidity",
    "dapp",
    "web3"
